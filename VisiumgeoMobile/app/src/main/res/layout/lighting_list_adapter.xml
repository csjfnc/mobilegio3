<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cab_ip"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/lighting_id"
            android:layout_alignParentTop="true"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_primary"
            android:layout_marginLeft="15dp"
            android:text="sdsd"
            />

        <!--ImageView
            android:id="@+id/lighting_edit_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_drawer"/-->
        <ImageView
            android:id="@+id/img_expande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_expand_more_black_24dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCC"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/options_ip"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="#d3d9534f"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_alignParentTop="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_toLeftOf="@+id/lighting_edit_icon"
            android:src="@drawable/ic_close_black_24dp"/>

        <ImageButton
            android:id="@+id/lighting_edit_icon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:text="Editar"/>

    </RelativeLayout>

    <GridLayout
        android:id="@+id/gridViewIp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:visibility="gone"
            tools:context=".GridLayoutActivity" >

        <TextView
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="center|start"
                android:padding="10dp"
                android:layout_row="0"
                android:background="@color/color_primary_alpha"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/dialog_lighting_arm_type" />

        <TextView
                android:id="@+id/lighting_arm_type"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"

                android:padding="10dp"
                android:layout_row="0"
                android:singleLine="false"/>

        <TextView
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="center|start"
                android:padding="10dp"
                android:background="@color/color_primary_alpha"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/dialog_lighting_fixture_type" />

        <TextView
                android:id="@+id/lighting_fixture_type"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"

                android:padding="10dp"
                android:singleLine="false"/>

        <TextView
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="center|start"
                android:padding="10dp"
                android:background="@color/color_primary_alpha"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/dialog_lighting_fixture_amount" />

        <TextView
                android:id="@+id/lighting_fixture_amount"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:padding="10dp"
                android:singleLine="false"/>

        <TextView
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="center|start"
                android:padding="10dp"
                android:background="@color/color_primary_alpha"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/dialog_lighting_lamp_type" />

        <TextView
                android:id="@+id/lighting_lamp_type"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:padding="10dp"
                android:singleLine="false"/>

        <TextView
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="4"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="center|start"
                android:padding="10dp"
                android:background="@color/color_primary_alpha"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/dialog_lighting_power_rating" />

        <TextView
                android:id="@+id/lighting_power_rating"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="4"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:padding="10dp"
                android:singleLine="false"/>

        <TextView
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="5"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="center|start"
                android:padding="10dp"
                android:background="@color/color_primary_alpha"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/dialog_lighting_power_phase" />

        <TextView
                android:id="@+id/lighting_power_phase"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="5"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:padding="10dp"
                android:singleLine="false"/>

        <TextView
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="6"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="center|start"
                android:padding="10dp"
                android:background="@color/color_primary_alpha"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/dialog_lighting_trigger" />

        <TextView
                android:id="@+id/lighting_trigger"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="6"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:padding="10dp"
                android:singleLine="false"/>

        <TextView
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="7"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="center|start"
                android:padding="10dp"
                android:background="@color/color_primary_alpha"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/dialog_lighting_status" />

        <TextView
                android:id="@+id/lighting_status"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="7"
                android:layout_gravity="fill"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:padding="10dp"

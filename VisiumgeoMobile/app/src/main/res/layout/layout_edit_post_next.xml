<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/post_edit_title"
        android:text="@string/dialog_post_actions_title"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/red_action_bar"
        android:layout_height="50dp"/>

    <Button
        android:visibility="gone"
        android:layout_below="@+id/post_edit_title"
        android:id="@+id/location_button"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/dialog_post_edit_location"
        android:textColor="@color/color_primary_alpha"
        android:background="@drawable/selector_white_button"
        android:layout_height="50dp"/>

    <LinearLayout
    android:id="@+id/lay_seq"
    android:layout_below="@+id/location_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/post_seq_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textStyle="bold"
            android:textSize="14dp" />


    <TextView
        android:id="@+id/post_seq_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentLeft="true"
        android:text=""
        android:textStyle="bold"
        android:textSize="14dp" />

        <TextView
            android:id="@+id/post_seq_effort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textStyle="bold"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/post_seq_equipament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textStyle="bold"
            android:textSize="14dp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay_seq2"
        android:layout_below="@+id/lay_seq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/post_seq_rede_primaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textStyle="bold"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/post_seq_ocupantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textStyle="bold"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/post_seq_ocupanted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textStyle="bold"
            android:textSize="14dp" />

</LinearLayout>
    <View
        android:id="@+id/divider_seq"
        android:layout_below="@+id/lay_seq2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#CCC"/>

    <ViewFlipper
        android:layout_below="@+id/divider_seq"
        android:id="@+id/vs"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/footer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/edit_posteTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="TIPO DO POSTE"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#CCC"/>


            <!--Spinner
                android:id="@+id/post_height"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" /-->

            <GridView
                android:id="@+id/grid_post_tipo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="0dp"
                android:verticalSpacing="0dp"
                android:stretchMode="columnWidth"
                android:numColumns="2"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/edit_posteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="ALTURA DO POSTE"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#CCC"/>


            <!--Spinner
                android:id="@+id/post_height"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" /-->

                <GridView
                    android:id="@+id/gridAltura"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="0dp"
                    android:verticalSpacing="0dp"
                    android:stretchMode="columnWidth"
                    android:numColumns="3"
                    android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/txt_esforco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="ESFORÇO"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#CCC"/>


            <!--Spinner
                android:id="@+id/post_height"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" /-->

            <GridView
                android:id="@+id/grid_esforco"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="0dp"
                android:verticalSpacing="0dp"
                android:stretchMode="columnWidth"
                android:numColumns="4"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_equipament"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/txt_equipamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="EQUIPAMENTO"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#CCC"/>


            <!--Spinner
                android:id="@+id/post_height"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" /-->

            <GridView
                android:id="@+id/grid_equipamento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="0dp"
                android:verticalSpacing="0dp"
                android:stretchMode="columnWidth"
                android:numColumns="2"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/txt_redeprimaria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="SOMENTE REDE PRIMARIA"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#CCC"/>


            <!--Spinner
                android:id="@+id/post_height"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" /-->

            <GridView
                android:id="@+id/grid_redeprimaria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="0dp"
                android:verticalSpacing="0dp"
                android:stretchMode="columnWidth"
                android:numColumns="2"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/edit_OcupnatS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="OCUPANTE S"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#CCC"/>


            <!--Spinner
                android:id="@+id/post_height"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" /-->

            <GridView
                android:id="@+id/grid_ocupante_s"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="0dp"
                android:verticalSpacing="0dp"
                android:stretchMode="columnWidth"
                android:numColumns="4"
                android:gravity="center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/edit_OcupnatD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="OCUPANTE D"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#CCC"/>


            <!--Spinner
                android:id="@+id/post_height"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" /-->

            <GridView
                android:id="@+id/grid_ocupante_d"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="0dp"
                android:verticalSpacing="0dp"
                android:stretchMode="columnWidth"
                android:numColumns="4"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edit_posteObs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="22dp"
                android:layout_gravity="center"
                android:text="OBSERVAÇÃO"/>

            <EditText
                style="@android:style/Widget.Holo.Light.EditText"
                android:id="@+id/edit_observation"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:hint="Obs..."
                android:minLines="5"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:singleLine="false"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/divider_meio"
            android:id="@+id/images_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/edit_posteFotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="FOTOS"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#CCC"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button android:id="@+id/button_set_start"
                    android:layout_width="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Definir início"
                    android:textColor="@color/color_primary_alpha"
                    android:background="@drawable/selector_white_button"
                    android:layout_height="40dp"/>

                <Button android:id="@+id/button_add"
                    android:layout_width="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Adicionar"
                    android:textColor="@color/color_primary_alpha"
                    android:background="@drawable/selector_white_button"
                    android:layout_height="40dp"/>

            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scroll"
                android:layout_above="@+id/footer"
                android:layout_below="@+id/post_edit_title">
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:id="@+id/layoutImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </ViewFlipper>

    <View
        android:id="@+id/divider_meio"
        android:layout_below="@id/vs"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_height="1px"
        android:background="#CCC"/>


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="bottom"
        android:orientation="horizontal">


        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/selector_white_button"
            android:text="@string/cancel"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:drawableLeft="@drawable/ic_navigate_before_black_24dp"
            android:textColor="@color/color_primary_alpha" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:background="@drawable/selector_red_button"
            android:text="Próximo"
            android:textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCC">

    <RelativeLayout
        android:id="@+id/textTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:paddingLeft="5dp"
            android:text="Editar Demanda"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/btn_foto"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
            android:text="Fotos"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textTitulo"
        android:id="@+id/scroll_edit_post_completo"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero"
        android:textStyle="bold"
        android:textSize="20dp"/>

        <EditText
            android:id="@+id/numero_edt"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#CCC"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complemento"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/complemento_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/tipo_spn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#CCC"
            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clasificação"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <Spinner
                android:id="@+id/classificacao_spn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#CCC"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domicilios"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <Spinner
                android:id="@+id/domicilios_spn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#CCC"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classificação Comércio"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <Spinner
                android:id="@+id/classificacao_comercio_spn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#CCC"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domicilios Comércio"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <Spinner
                android:id="@+id/domicilios_comercio_spn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#CCC"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade Andares"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/quantidade_andares_edt"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#CCC"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade Apartamentos"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/quantidade_apartamentos_edt"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#CCC"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ocorrência"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <Spinner
                android:id="@+id/ocorrencia_spn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#CCC"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Edificio"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/nome_edificop_edt"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#CCC"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade Blocos"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/quantidade_blocos_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>



    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:backgroundTint="#707070"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_height="54dp"/>

        <Button android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:text="@string/save"
            android:textSize="18dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:backgroundTint="@color/save_button"
            android:textColor="@color/white"
            android:layout_height="54dp"/>

    </LinearLayout>
</RelativeLayout >

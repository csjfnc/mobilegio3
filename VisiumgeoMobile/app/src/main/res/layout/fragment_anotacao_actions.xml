<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_button"
        android:padding="12dp"
        android:text="Anotação"
        android:textSize="18dp"
        android:textColor="#FFF"
        android:gravity="center"/>

    <LinearLayout
            android:id="@+id/actions"
            android:layout_below="@+id/title"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!--Button
            android:id="@+id/edit_list_lighting"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:text="@string/dialog_post_actions_list_lighting"
            android:textColor="@color/color_primary_alpha"
            android:background="@drawable/selector_white_button"
            android:layout_height="50dp"/-->

        <Button
                android:id="@+id/edit_anotacao"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:text="Editar"
                android:textColor="@color/color_primary_alpha"
                android:background="@drawable/selector_white_button"
                android:layout_height="50dp"/>

        <!--Button
            android:id="@+id/edit_afloramento"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:text="@string/dialog_afloramento_actions_edit"
            android:textColor="@color/color_primary_alpha"
            android:background="@drawable/selector_white_button"
            android:layout_height="50dp"/-->

        <!--Button
            android:id="@+id/edit_banco_capacitador"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:text="Editar Banco Capacitador"
            android:textColor="@color/color_primary_alpha"
            android:background="@drawable/selector_white_button"
            android:layout_height="50dp"/-->

        <Button
            android:id="@+id/delete_anotacao"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:text="Apagar"
            android:textColor="@color/color_primary_alpha"
            android:background="@drawable/selector_white_button"
            android:layout_height="50dp"/>

    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_below="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCC"/>

    <LinearLayout
            android:layout_below="@+id/divider"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/save"
            android:paddingLeft="50dp"
            android:textColor="@color/color_primary_alpha"
            android:background="@drawable/selector_white_button"
            android:layout_height="50dp"/>

        <Button android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:gravity="center_vertical|center_horizontal"
                android:text="@string/cancel"
                android:textColor="@color/color_primary_alpha"
                android:background="@drawable/selector_white_button"
                android:layout_height="50dp"/>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/post_edit_title"
        android:text="@string/dialog_post_actions_title"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/red_action_bar"
        android:layout_height="50dp"/>

    <LinearLayout
        android:id="@+id/lay_seq"
        android:layout_below="@+id/post_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/post_seq_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/post_seq_effort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/post_seq_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/post_seq_ocupantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/post_seq_ocupanted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textSize="13dp"/>

    </LinearLayout>
    <View
        android:id="@+id/divider_seq"
        android:layout_below="@+id/lay_seq"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#CCC"/>

    <ViewFlipper
        android:layout_below="@+id/divider_seq"
        android:id="@+id/vs_ponto_entrega"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/footer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/edit_posteStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="STATUS"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#CCC"/>


            <!--Spinner
                android:id="@+id/post_height"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" /-->

            <GridView
                android:id="@+id/gridStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="0dp"
                android:verticalSpacing="0dp"
                android:stretchMode="columnWidth"
                android:numColumns="2"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/txt_classe_de_atendimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="CLASSE DE ATENDIMENTO"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#CCC"/>


            <!--Spinner
                android:id="@+id/post_height"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" /-->

            <GridView
                android:id="@+id/grid_classe_de_atendimento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="0dp"
                android:verticalSpacing="0dp"
                android:stretchMode="columnWidth"
                android:numColumns="4"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/edit_posteTipo_construcao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="TIPO DE CONSTRUÇÃO"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#CCC"/>


            <!--Spinner
                android:id="@+id/post_height"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" /-->

            <GridView
                android:id="@+id/grid_post_tipo_construcao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="0dp"
                android:verticalSpacing="0dp"
                android:stretchMode="columnWidth"
                android:numColumns="2"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/edit_classe_social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="CLASSE SOCIAL"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#CCC"/>


            <!--Spinner
                android:id="@+id/post_height"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" /-->

            <GridView
                android:id="@+id/grid_classe_social"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="0dp"
                android:verticalSpacing="0dp"
                android:stretchMode="columnWidth"
                android:numColumns="4"
                android:gravity="center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/text_lagradouro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="LAGRADOURO"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#CCC"/>


            <EditText
                style="@android:style/Widget.Holo.Light.EditText"
                android:id="@+id/edit_lagradouro"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:hint="Obs..."
                android:minLines="5"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:singleLine="false"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edit_posteObs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="22dp"
                android:layout_gravity="center"
                android:text="NUMERO"/>

            <EditText
                style="@android:style/Widget.Holo.Light.EditText"
                android:id="@+id/edit_observation"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:hint="NUMERO"
                android:minLines="5"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:singleLine="false"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_complemento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="22dp"
                android:layout_gravity="center"
                android:text="COMPLEMENTO"/>

            <EditText
                style="@android:style/Widget.Holo.Light.EditText"
                android:id="@+id/edit_complemento"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:hint="COMPLEMENTO"
                android:minLines="5"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:singleLine="false"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_fase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="22dp"
                android:layout_gravity="center"
                android:text="FASE"/>

            <EditText
                style="@android:style/Widget.Holo.Light.EditText"
                android:id="@+id/edit_fase"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:hint="FASE"
                android:minLines="5"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:singleLine="false"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_et_ligacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="22dp"
                android:layout_gravity="center"
                android:text="FASE"/>

            <EditText
                style="@android:style/Widget.Holo.Light.EditText"
                android:id="@+id/edit_et_ligacao"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:hint="FASE"
                android:minLines="5"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:singleLine="false"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_obs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="22dp"
                android:layout_gravity="center"
                android:text="FASE"/>

            <EditText
                style="@android:style/Widget.Holo.Light.EditText"
                android:id="@+id/edit_obs"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:hint="Obs..."
                android:minLines="5"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:singleLine="false"
                android:textColor="@color/black" />
        </LinearLayout>

    </ViewFlipper>

    <View
        android:id="@+id/divider_meio"
        android:layout_below="@id/vs_ponto_entrega"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_height="1px"
        android:background="#CCC"/>


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button_ponto_entrega"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/selector_white_button"
            android:text="@string/cancel"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:drawableLeft="@drawable/ic_navigate_before_black_24dp"
            android:textColor="@color/color_primary_alpha" />

        <Button
            android:id="@+id/next_button_ponto_entrega"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:background="@drawable/selector_red_button"
            android:text="Próximo"
            android:textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>